FROM 003-casarest:latest as buildenv

FROM debian:bullseye

COPY --from=buildenv /usr/local/lib/ /usr/local/lib/
COPY --from=buildenv /usr/local/include/ /usr/local/include
COPY --from=buildenv /tmp/cmake-build/cmake /home/yanda/cmake
COPY --from=buildenv /usr/lib/x86_64-linux-gnu/libboost* /usr/lib/x86_64-linux-gnu/
COPY --from=buildenv /usr/include/boost/ /usr/include/boost/

RUN apt-get update --fix-missing
RUN apt-get upgrade -y
RUN apt-get install    -y  g++ cmake make git

# perf tools
RUN apt-get install -y valgrind linux-perf linux-base

WORKDIR /home/yanda
